<?xml version="1.0" encoding="utf-8"?>
<Entity extends="std.entities.Simple">
	<Triggers>
		<Trigger>
			<Event>KeyPressed_Up</Event>
			<Scripts>
				<Script>me.startAction("GoUp");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyPressed_Down</Event>
			<Scripts>
				<Script>me.startAction("GoDown");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyPressed_Left</Event>
			<Scripts>
				<Script>me.startAction("GoLeft");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyPressed_Right</Event>
			<Scripts>
				<Script>me.startAction("GoRight");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Up</Event>
			<Scripts>
				<Script>me.stopAction("GoUp");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Down</Event>
			<Scripts>
				<Script>me.stopAction("GoDown");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Left</Event>
			<Scripts>
				<Script>me.stopAction("GoLeft");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Right</Event>
			<Scripts>
				<Script>me.stopAction("GoRight");</Script>
			</Scripts>
		</Trigger>
		
		<Trigger>
			<Event>Created</Event>
			<Scripts>
				<Script>me.startAction("CreateScene");</Script>
			</Scripts>
		</Trigger>
	</Triggers>
	
	<Actions>
		<Action>
			<Id>CreateScene</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>Display.warn("Creating Scene...");</Script>
				<Script>me.stopAction("CreateScene");</Script>
			</Scripts>
		</Action>
		
		<Action>
			<Id>GoLeft</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>Display.debug("Going Left!");</Script>
				<Script>Display.testMove("left");</Script>
			</Scripts>
		</Action>
		<Action>
			<Id>GoRight</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>Display.debug("Going Right!");</Script>
				<Script>Display.testMove("right");</Script>
			</Scripts>
		</Action>
		<Action>
			<Id>GoUp</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>Display.debug("Going Up!");</Script>
				<Script>Display.testMove("up");</Script>
			</Scripts>
		</Action>
		<Action>
			<Id>GoDown</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>Display.debug("Going Down!");</Script>
				<Script>Display.testMove("down");</Script>
			</Scripts>
		</Action>
	</Actions>
</Entity>